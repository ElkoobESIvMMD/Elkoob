@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100">

            <span class="text-center login100-form-title display-5">
                ورود به سایت
            </span>

            <form asp-controller="Account" asp-action="Login" asp-route-returnUrl="@ViewData["returnUrl"]" method="post" class="login100-form validate-form">
                <div asp-validation-summary="ModelOnly"></div>

                @if (ViewData["ErrorMessage"] != null)
                {
                    <div class="text-danger"> @ViewData["Message"]</div>
                }

                <div class="wrap-input100 validate-input">
                    <input asp-for="UserName" class="input100" placeholder="نام کاربری">
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-person-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
                        </svg>
                    </span>
                </div>
                <span asp-validation-for="UserName" class="text-danger"></span>


                <div class="wrap-input100 validate-input">
                    <input asp-for="Password" class="input100" placeholder="رمز عبور">
                    <span class="focus-input100"></span>
                    <span class="symbol-input100">
                        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-lock-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path d="M2.5 9a2 2 0 0 1 2-2h7a2 2 0 0 1 2 2v5a2 2 0 0 1-2 2h-7a2 2 0 0 1-2-2V9z" />
                            <path fill-rule="evenodd" d="M4.5 4a3.5 3.5 0 1 1 7 0v3h-1V4a2.5 2.5 0 0 0-5 0v3h-1V4z" />
                        </svg>
                    </span>
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>

                <div class="form-group">
                    <label asp-for="RememberMe"></label>
                    <input asp-for="RememberMe" />
                    <span asp-validation-for="RememberMe"></span>
                </div>

                <div class="container-login100-form-btn">
                    <button class="login100-form-btn">
                        ورود به سایت
                    </button>
                </div>
                <div class="text-center p-t-136">
                    <a class="txt2" asp-controller="Account" asp-action="Register">
                        Create your Account
                        <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                    </a>
                </div>
            </form>
            <div class="login100-pic js-tilt" data-tilt="" style="will-change: trtransform;
                                      transform: perspective(300px) rotateX(0deg) rotateY(0deg);">
                <img src="~/Images/img-01.png" />
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}